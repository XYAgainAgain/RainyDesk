{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RainyDesk",
  "version": "0.8.5",
  "identifier": "com.rainydesk.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../src/renderer"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["rain"],
        "description": "RainyDesk Rainscape Preset",
        "mimeType": "application/x-rainydesk-rainscape",
        "role": "Editor"
      }
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://raw.githubusercontent.com/XYAgainAgain/RainyDesk/main/updates.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}

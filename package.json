{
  "name": "rainydesk",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build && electron-forge start",
    "start:dev": "electron-forge start",
    "build": "npm run build:types && npm run build:tauri-api && npm run build:audio && npm run build:rainscaper",
    "build:types": "tsc --noEmit",
    "build:tauri-api": "esbuild src/renderer/tauri-api.js --bundle --format=esm --outfile=src/renderer/tauri-api.bundle.js --sourcemap",
    "build:audio": "esbuild src/renderer/audio/index.ts --bundle --format=esm --outfile=src/renderer/audio.bundle.js --external:tone --sourcemap",
    "build:rainscaper": "esbuild src/renderer/rainscaper/index.ts --bundle --format=esm --outfile=src/renderer/rainscaper.bundle.js --sourcemap",
    "watch:audio": "esbuild src/renderer/audio/index.ts --bundle --format=esm --outfile=src/renderer/audio.bundle.js --external:tone --sourcemap --watch",
    "watch:rainscaper": "esbuild src/renderer/rainscaper/index.ts --bundle --format=esm --outfile=src/renderer/rainscaper.bundle.js --sourcemap --watch",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "tauri": "tauri",
    "tauri:dev": "npm run build && tauri dev",
    "tauri:build": "npm run build && tauri build"
  },
  "keywords": [
    "rain",
    "desktop",
    "ambient",
    "relaxation"
  ],
  "author": "Sam",
  "license": "BUSL-1.1",
  "description": "A peaceful desktop rain simulation application",
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^25.0.9",
    "electron": "^40.0.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "electron-squirrel-startup": "^1.0.1",
    "get-windows": "^9.2.3",
    "matter-js": "^0.20.0",
    "tone": "^15.1.22"
  }
}
